<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<fx:root alignment="TOP_RIGHT" prefHeight="100.0" prefWidth="400.0" type="javafx.scene.layout.HBox"
         xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <VBox fx:id="chatBubble" maxHeight="-Infinity" minHeight="-Infinity" spacing="10.0" styleClass="chat-bubble">
            <HBox.margin>
                <Insets left="15.0" right="5.0"/>
            </HBox.margin>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>
            <children>
                <Label fx:id="dialog" lineSpacing="5.0" styleClass="chat-label" text="Label" wrapText="true">
                    <font>
                        <Font name="Comic Sans MS" size="13.0"/>
                    </font>
                </Label>
            </children>
        </VBox>
        <ImageView fx:id="displayPicture" fitHeight="99.0" fitWidth="99.0" pickOnBounds="true" preserveRatio="true"/>
    </children>
    <padding>
        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
    </padding>
</fx:root>