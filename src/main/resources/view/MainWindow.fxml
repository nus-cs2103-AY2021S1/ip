<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane
        maxHeight="600.0"
        maxWidth="400.0"
        minHeight="600.0"
        minWidth="400.0"
        prefHeight="600.0"
        prefWidth="400.0"
        xmlns="http://javafx.com/javafx/8.0.171"
        xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="gui.MainWindow">
    <children>
        <TextField
                fx:id="userInput"
                layoutY="538.0"
                onAction="#handleUserInput"
                prefHeight="60.0"
                prefWidth="320.0"
                AnchorPane.bottomAnchor="1.0"/>
        <Button
                fx:id="sendButton"
                layoutX="320.0" layoutY="538.0"
                mnemonicParsing="false"
                onAction="#handleUserInput"
                prefHeight="60.0"
                prefWidth="80.0"
                text="Send"
                AnchorPane.bottomAnchor="1.0"/>
        <ScrollPane
                fx:id="scrollPane"
                hbarPolicy="NEVER"
                hvalue="1.0"
                prefHeight="537.0"
                prefWidth="400.0"
                vvalue="1.0">
            <content>
                <VBox
                        fx:id="dialogContainer"
                        prefHeight="537.0"
                        prefWidth="388.0"/>
            </content>
        </ScrollPane>
    </children>
</AnchorPane>