<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<AnchorPane maxHeight="Infinity" maxWidth="Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0"
            prefWidth="400.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="duke.MainWindow">
    <children>
        <GridPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                  AnchorPane.topAnchor="0.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <TextField fx:id="userInput" onAction="#handleUserInput" minHeight="41.0" minWidth="324.0"
                           AnchorPane.bottomAnchor="1.0" GridPane.columnIndex="0" GridPane.rowIndex="3"
                           GridPane.valignment="CENTER"/>
                <Button fx:id="sendButton" mnemonicParsing="false" onAction="#handleUserInput" minHeight="41.0"
                        minWidth="76.0" text="Send" GridPane.columnIndex="1" GridPane.rowIndex="3"
                        GridPane.valignment="CENTER"/>
                <ScrollPane fx:id="scrollPane" hbarPolicy="NEVER" hvalue="1.0" fitToWidth="true" vvalue="1.0"
                            maxHeight="Infinity" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2">
                    <content>
                        <VBox fx:id="dialogContainer" maxHeight="Infinity"/>
                    </content>
                </ScrollPane>
            </children>
        </GridPane>
    </children>
</AnchorPane>
