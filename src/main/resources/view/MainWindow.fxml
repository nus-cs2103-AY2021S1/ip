<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="duke.MainWindow">
   <center>
    <ScrollPane fx:id="scrollPane" fitToHeight="true" fitToWidth="true" focusTraversable="false" hbarPolicy="NEVER" hvalue="1.0" prefHeight="777.0" prefWidth="605.0" vvalue="1.0" BorderPane.alignment="CENTER">
         <content>
        <VBox fx:id="dialogContainer" blendMode="DARKEN" prefHeight="775.0" prefWidth="608.0" style="-fx-background-color: #D4F1F4;" />
         </content>
    </ScrollPane>
   </center>
   <bottom>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <HBox maxWidth="1.7976931348623157E308">
               <children>
                <TextField fx:id="userInput" maxWidth="Infinity" onAction="#handleUserInput" prefHeight="50.0" prefWidth="509.0" promptText="type help to view all commands " style="-fx-background-color: #D4F1F4; -fx-prompt-text-fill: grey; -fx-background-radius: 15;" HBox.hgrow="ALWAYS">
                     <font>
                        <Font name="Segoe UI Italic" size="16.0" />
                     </font>
                     <effect>
                        <DropShadow spread="0.34" />
                     </effect>
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                  </TextField>
                <Button fx:id="sendButton" contentDisplay="CENTER" maxWidth="1.7976931348623157E308" minWidth="107.0" mnemonicParsing="false" onAction="#handleUserInput" prefHeight="50.0" prefWidth="107.0" style="-fx-background-color: #75E6DA; -fx-background-radius: 15;" text="Enter" textFill="#5b5b5b" wrapText="true">
                     <font>
                        <Font name="Segoe UI Bold" size="18.0" />
                     </font>
                     <effect>
                        <DropShadow />
                     </effect>
                     <HBox.margin>
                        <Insets bottom="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </bottom>
</BorderPane>
