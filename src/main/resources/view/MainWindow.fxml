<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<fx:root type="javafx.scene.layout.AnchorPane"
         maxHeight="Infinity"
         maxWidth="Infinity"
         minHeight="-Infinity"
         minWidth="-Infinity"
         xmlns="http://javafx.com/javafx/8.0.171"
         xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <ScrollPane
                fx:id="scrollPane"
                hbarPolicy="NEVER"
                hvalue="1.0"
                maxHeight="Infinity"
                maxWidth="Infinity"
                prefHeight="500.0"
                prefWidth="400.0"
                vvalue="1.0"
                AnchorPane.leftAnchor="1.0"
                AnchorPane.rightAnchor="1.0"
                AnchorPane.topAnchor="1.0"
                AnchorPane.bottomAnchor="40"
        >
            <content>
                <VBox fx:id="dialogContainer"
                      maxHeight="Infinity"
                      maxWidth="Infinity"
                      prefWidth="${scrollPane.width}"
                />
            </content>
        </ScrollPane>

        <HBox
                AnchorPane.bottomAnchor="1.0"
                AnchorPane.leftAnchor="1.0"
                AnchorPane.rightAnchor="1.0"
        >
            <TextField fx:id="userInput" HBox.hgrow="ALWAYS"/>
            <Button fx:id="sendButton" mnemonicParsing="false" text="Send" />
        </HBox>
    </children>
</fx:root>